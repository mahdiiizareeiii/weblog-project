<% if (blogs.length > 0) { %>
    <h2 class="mt-2">آخرین پست ها</h2>
    <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>تست</th>
                            <th>تست</th>
                            <th>تست</th>
                            <th>تست</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let blog of blogs) { %>
                        <tr>
                            <td>1</td>
                            <td>
                                <a href="/blogs/<%= blog._id %>"></a><%= blog.title %></td>
                            <td><%= formatDate(blog.createdAt) %></td>
                            <td>
                                <span class="badge <%= blog.status == "عمومی" ? 'badge-success' : 'badge-warning' %>"
                                    <%= blog.status %>
                                </span>
                            </td>
                            <td>
                                <a href="/dashboard/edit-post/<%= blog._id %>" class="btn btn-sm btn-primary">ویرایش</a>
                            </td>
                            <td>
                                <a href="/dashboard/delete-post/<%= blog._id %>" class="btn btn-sm btn-danger">حذف</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="text-center"></div>
                <h2 class="mt-2">درحال حاضر هیچ پستی ثبت نشده.</h2>
<% } %>